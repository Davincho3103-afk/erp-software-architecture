@startuml

entity "Producto" {
  * id_producto : integer <<PK>>
  --
  * nombre : varchar(100)
  descripcion : text
  unidad_medida : varchar(20)
  precio : decimal
  stock : integer
}

entity "Proveedor" {
  * id_proveedor : integer <<PK>>
  --
  * razon_social : varchar(150)
  nit : varchar(50)
  telefono : varchar(50)
  email : varchar(100)
}

entity "Orden_Compra" {
  * id_orden : integer <<PK>>
  --
  fecha : date
  estado : varchar(50)
  id_proveedor : integer <<FK>>
}

entity "Detalle_Orden" {
  * id_detalle : integer <<PK>>
  --
  cantidad : integer
  precio_unitario : decimal
  id_orden : integer <<FK>>
  id_producto : integer <<FK>>
}

Proveedor ||--o{ Orden_Compra
Orden_Compra ||--o{ Detalle_Orden
Producto ||--o{ Detalle_Orden

@enduml
