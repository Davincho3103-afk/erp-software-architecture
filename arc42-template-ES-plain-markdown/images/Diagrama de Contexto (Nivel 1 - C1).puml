@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

Person(admin, "Administrador de Compras", "Gestiona productos, proveedores y órdenes de compra.")
Person(gerente, "Gerente General", "Consulta reportes y estadísticas del ERP.")

System(erp, "Sistema ERP", "Gestiona los procesos empresariales: compras, facturación, stock y más.")

System_Ext(accounting_system, "Sistema Contable Externo", "Sistema externo de contabilidad y finanzas.")

Rel(admin, erp, "Registra productos, proveedores y órdenes")
Rel(gerente, erp, "Consulta reportes estratégicos")
Rel(erp, accounting_system, "Envía datos de facturación y asientos contables")

@enduml
